<% new_tabs = [{:name => 'dailynote', :partial => 'dailynotes/new_dailynote', :label => "新建工作日报"},
  {:name => 'weeklynote', :partial => 'weeklynotes/new_weeklynote', :label => "新建工作周报"}] %>
<div id="add" class="splitcontentleft">
  <%= render :partial => 'common/tabs', :locals => {:tabs => new_tabs} %>
</div>
<div id="list" class="splitcontentright">

  <div id="dailynotes_list">
    <%= render :partial => 'dailynotes_list', :locals => {:dailynotes => @dailynotes} %>
  </div>
  <div id="weeklynotes_list" style="display: none">
    <%= render :partial => 'weeklynotes/weeklynotes_list', :locals => {:weeklynotes => @weeklynotes} %>
  </div>
</div>

<script language="javascript">
  j$(function() {
    var yearFrom=new Date().getYear()-60+1900;
    var yearTo=new Date().getYear()-18+1900;      
    j$("#date").datepicker({   
      yearRange: yearFrom+':'+yearTo,
      clearText:'清除',
      closeText:'关闭',
      prevText:'前一月',
      nextText:'后一月',
      currentText:' ',
      monthNames:['1月','2月','3月','4月','5月','6月','7月','8月','9月','10月','11月','12月'],
      dayNames:['星期天','星期一','星期二','星期三','星期四','星期五','星期六' ] //不生效
    });
    j$("#date").datepicker("option", "dateFormat", "yy-mm-dd");
    
    j$("#start_date").datepicker({   
      yearRange: yearFrom+':'+yearTo,
      clearText:'清除',
      closeText:'关闭',
      prevText:'前一月',
      nextText:'后一月',
      currentText:' ',
      monthNames:['1月','2月','3月','4月','5月','6月','7月','8月','9月','10月','11月','12月'],
      dayNames:['星期天','星期一','星期二','星期三','星期四','星期五','星期六' ] //不生效
    });
    j$("#start_date").datepicker("option", "dateFormat", "yy-mm-dd");
    
  })
</script>
